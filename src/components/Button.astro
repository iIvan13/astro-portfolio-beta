---
interface Props {
  link: string;
  dataAos?: string;
}

const { link, dataAos } = Astro.props;
---

<a href={link} data-aos={dataAos} data-aos-duration="2000">
  <slot />
</a>

<style>
  a {
    padding: 8px 14px;
    color: var(--blue-100);
    border-radius: 4px;
    border: 2px solid var(--blue-600);
    max-width: max-content;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  a:hover {
    box-shadow: 1px 0 3px rgb(0, 55, 255);
  }
</style>
